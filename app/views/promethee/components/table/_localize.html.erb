<script type="text/ng-template" id="promethee/components/table/localize">
  <hr>

  <div class="row" ng-if="master.attributes.structure.value.length > 0">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th ng-repeat="cellUid in master.attributes.structure.value[0]">
              {{ master.attributes.data.value[cellUid].text.value }}
            </th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="row in master.attributes.structure.value" ng-if="$index > 0">
            <td ng-repeat="cellUid in row">
              {{ master.attributes.data.value[cellUid].text.value }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th ng-repeat="cellUid in master.attributes.structure.value[0]">
              <input  type="text"
                      ng-model="component.attributes.data.value[cellUid].text.value"
                      class="form-control">
            </th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="row in master.attributes.structure.value" ng-if="$index > 0">
            <td ng-repeat="cellUid in row">
              <input  class="form-control"
                      ng-model="component.attributes.data.value[cellUid].text.value"
                      type="text">
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</script>
