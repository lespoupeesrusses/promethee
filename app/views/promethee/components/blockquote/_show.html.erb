<%
  body = component[:attributes].dig(:body, :value)&.to_s&.html_safe
  author = component[:attributes].dig(:author, :value)&.to_s
%>

<div class="row <%= promethee_class_for(component) %>">
  <div class="col-md-12">
    <div class="blockquote"><%= body %></div>
    <% if author.present? %>
      <p class="author"><%= author %></p>
    <% end %>
  </div>
</div>
