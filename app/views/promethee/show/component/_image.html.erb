<%
src = component[:attributes][:src]
alt = component[:attributes][:alt]
caption = component[:attributes][:caption].to_s
%>
<figure class="<%= promethee_class_for component %>">
  <img class="img-responsive" src="<%= src %>" alt="<%= alt %>">

  <% if caption.present? %>
    <figcaption>
      <%= caption.html_safe %>
    </figcaption>
  <% end %>
</figure>
