<h1>Localization for "<%= @page %>"</h1>

<table class="table">
  <thead>
    <tr>
      <th>Page</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @localizations.each do |localization| %>
      <tr>
        <td><%= localization.page %></td>
        <td><%= localization.data %></td>
        <td><%= link_to 'Show', localization %></td>
        <td><%= link_to 'Edit', edit_localization_path(localization) %></td>
        <td><%= link_to 'Destroy', localization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Localization', new_page_localization_path, class: 'btn btn-default' %>
